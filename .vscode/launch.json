    "version": "0.2.0",
    "configurations": [
        


        












        

        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: External Script",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "cwd": "${input:pickWorkingDirectory}",
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ],
    "inputs": [
        {
            "id": "pickWorkingDirectory",
            "type": "promptString",
            "description": "Введите путь к рабочей директории",
            "default": ""
        }
    ]
}